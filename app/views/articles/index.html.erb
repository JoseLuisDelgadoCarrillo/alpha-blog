<h1> Articles listing page </h1>

<table>
    <thead>
    <tr>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th colspan ="3">Acciones</th>
    </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td> <%= article.title %></td>
            <td> <%= article.description %></td>
            <td><%= link_to 'Mostrar', article_path(article) %></td>
            <td><%= link_to 'Editar', edit_article_path(article) %></td>
            <td> <%= button_to 'Eliminar', article_path(article), method: :delete, onclick: "return confirm('Estas seguro?')" %> </td>
        </tr>
        <% end %>
    </tbody>
</table>
<p>
    <%= link_to 'Crear nuevo articulo', new_article_path %>
</p>